# actual pre-commit hook ----> pre-commit.sample
# but I dont want to use that whitespace thingy...
# I want to explore my own

#!/bin/bash

PWD=`pwd`
globalEmail=`git config --global --get user.email`
projectEmail=`git config --get user.email`
userName23=`git config user.name`

echo "Global email23: $globalEmail"
echo "project email23: $projectEmail"
echo "userName $userName23"
echo "path23 ==> $PWD"
exit 0
